<%= form_with(model: blog, local: true) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group form-group-lg">
    <%= f.text_field :title, id: :blog_title, class: 'form_control input-group input-group-lg', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: 'form_control input-group input-group-lg', rows: 15, placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <%= f.radio_button :status, 'draft' %>
    <%= f.label :status, 'Draft' %>

    <%= f.radio_button :status, 'published' %>
    <%= f.label :status, 'Published' %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
