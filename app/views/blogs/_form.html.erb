<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Matthew Kocanda Portfolio", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group form-group-lg">
    <%= form.text_field :title, id: :blog_title, class: 'form_control input-group input-group-lg', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, class: 'form_control input-group input-group-lg', rows: 15, placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
